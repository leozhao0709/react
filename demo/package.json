{
  "name": "demo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts-ts": "2.13.0"
  },
  "scripts": {
    "start": "npm-run-all -p watch-css watch-css-module start-ts",
    "build": "npm-run-all build-css build-css-module build-ts",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "build-css-module": "tcm src/ -o src/",
    "watch-css-module": "tcm src/ -o src/ --watch --recursive",
    "start-ts": "react-scripts-ts start",
    "build-ts": "react-scripts-ts build"
  },
  "devDependencies": {
    "@types/jest": "^22.1.2",
    "@types/node": "^9.4.4",
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.3",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "typed-css-modules": "^0.3.1",
    "typescript": "^2.7.1"
  }
}
